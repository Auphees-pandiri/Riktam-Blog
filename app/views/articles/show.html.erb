<p id="notice"><%= notice %></p>


<div class="container">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h2>
      			<strong>Title:</strong>
     			  <%= @article.title %>
		      </h2>
        </div>
        <div class="panel-body">
          <div align="center">
            <% if @article.user %>
                <ul class="listing">
                  <div class="row center">
                    <div class="well col-md-4 col-md-offset-4">
                      <li><h3>Created by:</h3></li>
                      <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                      <br>
                      <li class="article-title">
                      <%= link_to @article.user.username, user_path(@article.user) %>
                      </li>
                      <li><kbd><i>He has written 
                      <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
                      </i></kbd></li>
                    </div>
                  </div>
                </ul>
            <% end %>
          </div>

        	<h3><strong>Description:</strong></h3>
        	<p><%= @article.description %></p>
        </div>
        <div class="panel-footer">
 			<%= link_to 'Edit this Article', edit_article_path(@article), class:'btn btn-primary' %> 
 			<%= link_to 'Delete this Article', article_path(@article),method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
			<%= link_to 'View All Articles', articles_path,class:'btn btn-success ' %>
          
        </div>
      </div>
</div>
