<h1 align="center">All Riktam Bloggers</h1>
<div align="center">
	<%= will_paginate %>
</div>
<div align="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<br>
					<li class="article-title" style="font-size: 20px;">
					<%= link_to user.username, user_path(user) %>
					</li>
					<li><small>He has written <%= pluralize(user.articles.count, "article") if user.articles %></small></li>
					<% if logged_in? and current_user.admin? %>
						<div class="article-footer">
							<%= link_to 'Delete this User', user_path(user),method: :delete, data: { confirm: 'Are you sure you want to delete the user?' }, class:'btn' %>
						</div>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
</div>
<div align="center">
	<%= will_paginate %>
</div>